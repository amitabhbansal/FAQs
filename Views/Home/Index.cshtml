@model List<FAQs.Models.FAQ>
@{
	ViewData["Title"] = "FAQs";
}

<div class="container mt-5">
	<h1 class="text-center mb-5">@ViewData["Title"]</h1>
	<div class="row mb-4">
		<div class="col-3"></div>
		<div class="col-9">
			<ul class="list-group list-group-horizontal">
				<a class="list-group-item" href="/" >All fAQS</a>
				@foreach (var top in ViewBag.top)
				{
					<a class="list-group-item" asp-action="Index" asp-route-topic="@top.TopicId">@top.Name</a>
				}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<ul class="list-group">
				@foreach (var cat in ViewBag.cat)
				{
					<a class="list-group-item" asp-action="Index" asp-route-category="@cat.CategoryId">@cat.Name</a>
				}
			</ul>
		</div>
		<div class="accordion col-9" id="faqAccordion">
			@foreach (var faq in Model)
			{
				<div class="accordion-item">
					<h2 class="accordion-header" id="heading-@faq.FAQId">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@faq.FAQId" aria-expanded="false" aria-controls="collapse-@faq.FAQId">
							@faq.Question
						</button>
					</h2>
					<div id="collapse-@faq.FAQId" class="accordion-collapse collapse" aria-labelledby="heading-@faq.FAQId" data-bs-parent="#faqAccordion">
						<div class="accordion-body">
							<p>@faq.Answer</p>
							<p><strong>Category:</strong> @faq.Category.Name</p>
							<p><strong>Topic:</strong> @faq.Topic.Name</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

